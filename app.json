{
  "expo": {
    "name": "microPOS",
    "slug": "microPOS",
    "scheme": "micropos",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/brand-micro/app-icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/brand-micro/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#18181b"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "nz.co.micropos.app"
    },
    "android": {
      "package": "nz.co.micropos.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/brand-micro/app-icon-adapt.png",
        "backgroundColor": "#18181b"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/brand-micro/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "assets/fonts/SpaceMono-Regular.ttf",
            "assets/fonts/Corinthian-Bold-Plain.ttf"
          ]
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
